---
import Lang from "./Lang.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2">
  <nav
    class="flex px-3 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center"
    id="main-nav">
    <div id="lang-container" class="flex"></div>
    <ThemeToggle />
    <Lang />
  </nav>
</header>
<script>
  document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section");
    const navItems = document.querySelectorAll("header nav a");

    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("text-yellow-500");
            } else {
              item.classList.remove("text-yellow-500");
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    });

    sections.forEach((section) => {
      observer.observe(section);
    });

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect();
      } else {
        sections.forEach((section) => {
          observer.observe(section);
        });
      }
    };
  });

  async function renderNav() {
    const lang = document.documentElement.lang.toUpperCase();

    const navData = (
      await import(`../utils/data.json`, {
        assert: { type: "json" },
      })
    ).default;

    const navItems = navData[lang].nav;

    const navContainer = document.querySelector("#lang-container");

    navContainer.classList.remove("lang-fade-in");
    navContainer.classList.add("lang-fade-out");

    window.setTimeout(() => {
      navContainer.innerHTML = "";

      navItems.forEach((item) => {
        const a = document.createElement("a");
        a.href = item.url;
        a.textContent = item.title;
        a.setAttribute("aria-label", item.label);
        a.className = "sm:block transition-colors dark:text-white hover:text-cyan-500 hover:cyan-500 dark:hover:text-cyan-500 font-semibold relative block px-2 py-2";
        navContainer.appendChild(a);
      });

      requestAnimationFrame(() => {
        navContainer.classList.remove("lang-fade-out");
        navContainer.classList.add("lang-fade-in");
      });
    }, 180);
  }

  renderNav();
  window.addEventListener("language-change", renderNav);
</script>
<style>
  nav {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-shadown {
    to {
      @apply shadow-lg ring-1 backdrop-blur dark:bg-gray-800/90 bg-white/50 ring-white/10;
    }
  }

  #lang-container {
    transition: opacity 180ms ease, transform 180ms ease;
  }

  #lang-container.lang-fade-out {
    opacity: 0;
    transform: translateY(4px);
  }

  #lang-container.lang-fade-in {
    opacity: 1;
    transform: translateY(0);
  }
</style>
